alert: WazuhErrorFound
expr: rate({%%juju_topology%%} |~ "(?i)error" |~ "(?i)wazuh") > 0
for: 5m
labels:
  severity: error
annotations:
  summary: Wazuh errors detected.
  description: This alert is triggered when the Wazuh charm logs a error level message in the last 5 minutes.
